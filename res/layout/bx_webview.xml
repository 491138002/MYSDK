<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#89000000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#000000" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bx_header_game" />

            <ImageView
                android:id="@+id/i_bak_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ssdk_back_arr" />

            <Button
                android:id="@+id/bx_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:paddingLeft="23dp"
                android:paddingRight="10dp"
                android:text="@string/bx_back"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </LinearLayout>

    <WebView
        android:id="@+id/bx_webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#00FF00" />

</LinearLayout>